<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.hp.main.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="E-College"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="137dp"
                android:layout_marginTop="32dp"
                android:paddingLeft="56dp"
                android:paddingRight="56dp"
                android:paddingTop="56dp"
                android:paddingBottom="56dp"
                android:layout_gravity="center"
                android:onClick="topHundredColleges"
                android:background="@drawable/top100"
                android:text="Top100"
                android:textAlignment="center"
                android:layout_weight="0.07" />

            <Button
                android:layout_width="169dp"
                android:layout_height="118dp"
                android:paddingLeft="56dp"
                android:paddingRight="56dp"
                android:paddingTop="56dp"
                android:paddingBottom="56dp"

                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:onClick="collegeSearch"
                android:background="@drawable/search"
                android:text="Search"
                android:layout_weight="0.15" />
            <Button
                android:layout_width="174dp"
                android:layout_height="128dp"
                android:paddingLeft="56dp"
                android:paddingRight="56dp"
                android:paddingTop="56dp"
                android:paddingBottom="56dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:onClick="entranceExams"
                android:background="@drawable/entranceexam"
                android:text="EXAMS" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
        <Button
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:paddingLeft="56dp"
            android:paddingRight="56dp"
            android:paddingTop="56dp"
            android:paddingBottom="56dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:onClick="topStateColleges"/>
            <Button
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:paddingLeft="56dp"
                android:paddingRight="56dp"
                android:paddingTop="56dp"
                android:paddingBottom="56dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:onClick="eligibility"
                android:background="@drawable/eligibility" />
            <Button
                android:layout_width="146dp"
                android:layout_height="137dp"
                android:paddingLeft="56dp"
                android:paddingRight="56dp"
                android:paddingTop="56dp"
                android:paddingBottom="56dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:onClick="scholarshipTest"
                android:background="@drawable/scholarship"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>


